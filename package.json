{
  "name": "SecureChat",
  "type": "module",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "scripts": {
    "start": "webpack serve --mode development --config webpack.config.js",
    "build": "webpack --mode production --config webpack.config.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "build:server": "tsc src/server.ts --outDir dist --module esnext --target es2020 --esModuleInterop --resolveJsonModule --sourceMap --skipLibCheck",
    "server": "node dist/server.js",
    "start:server": "npm run build:server && npm run server",
    "dev:server": "tsx watch src/server.ts"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.7",
    "@radix-ui/react-progress": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.2.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "dompurify": "^3.2.5",
    "emoji-picker-react": "^4.12.2",
    "firebase-admin": "^13.2.0",
    "marked": "^15.0.8",
    "mongodb": "^6.15.0",
    "node": "^23.11.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-textarea-autosize": "^8.5.9",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/dompurify": "^3.2.0",
    "@types/marked": "^6.0.0",
    "@types/mongodb": "^4.0.6",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/webcrypto": "^0.0.30",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "css-loader": "^7.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "html-webpack-plugin": "^5.6.0",
    "lucide-react": "^0.399.0",
    "postcss": "^8.4.39",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.3",
    "typescript": "^5.5.2",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "react",
      "react-hooks",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "parser": "espree",
        "extends": [
          "eslint:recommended"
        ]
      }
    ]
  }
}
